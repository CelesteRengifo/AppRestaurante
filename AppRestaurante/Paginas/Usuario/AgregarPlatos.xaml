<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRestaurante.Paginas.Usuario.AgregarPlatos"
             Title="AgregarPlatos"
            BackgroundColor="#3E2723">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Nombre del plato:" TextColor="#EDE7E0"/>
        <Entry x:Name="NombreEntry" Placeholder="Ej: Arroz chaufa"/>

        <Label Text="Precio:" TextColor="#EDE7E0"/>
        <Entry x:Name="PrecioEntry" Keyboard="Numeric" Placeholder="Ej: 18"/>

        <Button Text="Seleccionar Imagen" BackgroundColor="#EDE7E0" TextColor="#3E2723" 
                Clicked="SeleccionarImagen_Clicked"/>
        <Image x:Name="ImagenPreview" HeightRequest="150"/>

        <Button Text="Subir Plato" Clicked="SubirPlato_Clicked"
                BackgroundColor="#EDE7E0" TextColor="#3E2723"/>
    </VerticalStackLayout>
</ContentPage>