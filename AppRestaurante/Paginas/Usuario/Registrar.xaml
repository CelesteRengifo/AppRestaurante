<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRestaurante.Paginas.Usuario.Registrar"
             BackgroundColor="#3E2723"
             Title="Registrar Usuario">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Registrar Usuario"
                   FontSize="28"
                   TextColor="#FFF8E1"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry x:Name="entryUsuario"
                   Placeholder="Usuario"
                   PlaceholderColor="#D7CCC8"
                   TextColor="#FFF8E1"
                   BackgroundColor="#5D4037"
                   FontSize="16" />

            <Entry x:Name="entryPassword"
                   Placeholder="ContraseÃ±a"
                   IsPassword="True"
                   PlaceholderColor="#D7CCC8"
                   TextColor="#FFF8E1"
                   BackgroundColor="#5D4037"
                   FontSize="16" />

            <Entry x:Name="entryNombre"
                   Placeholder="Nombre"
                   PlaceholderColor="#D7CCC8"
                   TextColor="#FFF8E1"
                   BackgroundColor="#5D4037"
                   FontSize="16" />

            <Entry x:Name="entryApellido"
                   Placeholder="Apellido"
                   PlaceholderColor="#D7CCC8"
                   TextColor="#FFF8E1"
                   BackgroundColor="#5D4037"
                   FontSize="16" />

            <Label Text="Seleccionar Rol"
                   TextColor="#FFF8E1"
                   FontSize="16" />

            <Picker x:Name="pickerRoles"
                    TextColor="#3E2723"
                    BackgroundColor="#FFF8E1"
                    FontSize="16"
                    ItemDisplayBinding="{Binding name}" />

            <Button Text="Registrar"
                    Clicked="OnRegistrarClicked"
                    BackgroundColor="#A1887F"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="15"
                    HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>