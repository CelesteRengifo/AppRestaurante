<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRestaurante.Paginas.Logueo.MeseroPage"
             Background="#3E2723"
             Title="Mesero">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#3E2723" Offset="0.1" />
            <GradientStop Color="#4E342E" Offset="0.5" />
            <GradientStop Color="#5D4037" Offset="1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="CenterAndExpand">

            <!-- Ícono o logo del mesero -->
            <Image Source="logoinicio.png"
                   HeightRequest="200"
                   HorizontalOptions="Center" />

            <Label Text="¡Bienvenido, Meserito!"
                   FontSize="28"
                   TextColor="#FFF8E1"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Accede al menú y gestiona tus pedidos"
                   FontSize="14"
                   TextColor="#D7CCC8"
                   HorizontalOptions="Center" />

            <!-- Botón para ir al menú -->
            <Button Text="Ver Menú"
                    BackgroundColor="#A1887F"
                    TextColor="White"
                    CornerRadius="25"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Clicked="IrAMenu">
                <Button.Shadow>
                    <Shadow Brush="Black"
                            Offset="4,4"
                            Radius="15"
                            Opacity="0.3" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
    